<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed %>
    <p>✔︎ <%= link_to task.title, task_path(task) %> - <%= link_to "❌", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></p>
    <% else %>
    <p>❑ <%= link_to task.title, task_path(task) %>
     - <%= link_to "❌", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% end %>
<% end %>

<button><%= link_to "➕ Add a new task", new_task_path %></button>



